{
    "manifest_version": 3,
    "name": "TabTools",
    "description": "Tools to make work with tabs easier.",
    "version": "24.08.09",
    "icons": {
        "16": "icon-48.png",
        "32": "icon-48.png",
        "48": "icon-48.png",
        "128": "icon-48.png"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "storage",
        "bookmarks",
        "tabs",
        "sessions",
        "sidePanel",
        "clipboardRead",
        "clipboardWrite"
    ],
    "action": {
        "default_title": "Click to open panel"
    },
    "side_panel": {
        "default_path": "View/sidepanel.html"
    }
}
